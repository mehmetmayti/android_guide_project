<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="Kullanıcı Düzenleme Sayfası"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:text="Ad Soyad*"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonNameSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="Ad Soyad"
        android:inputType="textPersonName"
        android:singleLine="false" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:text="Telefon Numarası*"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="0 555 555 55 55"
        android:inputType="number"
        android:singleLine="false" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:text="E-mail Adres*"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonMailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="örnek@örnek.com"
        android:inputType="textEmailAddress"
        android:singleLine="false" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:text="Kişi Notu"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="En yakın arkadaşım vs."
        android:inputType="text"
        android:singleLine="false" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22sp"
        android:text="Doğum Tarihi*"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonDateofBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:enabled="false"
            android:hint="Doğum Tarihi Seçin"
            android:inputType="text"
            android:singleLine="false"
            android:visibility="visible" />
        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seç"
            ></Button>
    </LinearLayout>

    <Button
        android:id="@+id/personUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Kişiyi Güncelle"
        android:textSize="18sp"></Button>

</LinearLayout>